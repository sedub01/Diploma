<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="root.MainController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar" prefHeight="26.0">
               <menus>
                  <Menu mnemonicParsing="false" text="Файл">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Правка">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Вид" />
                  <Menu mnemonicParsing="false" text="Настройки">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Action 1" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Справка">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Action 1" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <ToolBar fx:id="toolBar" prefHeight="40.0">
               <items>
                  <Button focusTraversable="false" graphicTextGap="0.0" mnemonicParsing="false">
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/icons/gridIcon.png" />
                           </image>
                           <viewport>
                              <Rectangle2D />
                           </viewport>
                        </ImageView>
                     </graphic>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                     <tooltip>
                        <Tooltip text="Включить сетку" />
                     </tooltip>
                  </Button>
                  <ComboBox fx:id="moduleTitlesComboBox" focusTraversable="false" prefHeight="40.0" prefWidth="170.0">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                  </ComboBox>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="infoButton" focusTraversable="false" graphicTextGap="0.0" mnemonicParsing="false">
                     <graphic>
                        <ImageView disable="true" fitHeight="40.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/icons/infoIcon.png" />
                           </image>
                           <viewport>
                              <Rectangle2D />
                           </viewport>
                        </ImageView>
                     </graphic>
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                     <tooltip>
                        <Tooltip text="Информация о модуле" />
                     </tooltip>
                  </Button>
               </items>
               <padding>
                  <Insets bottom="3.0" left="10.0" right="15.0" top="3.0" />
               </padding>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <center>
      <BorderPane fx:id="borderPane" BorderPane.alignment="CENTER">
         <center>
            <Label fx:id="moduleLabel" alignment="CENTER" text="Выберите модуль из списка модулей" wrapText="true" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
   </center>
</BorderPane>
